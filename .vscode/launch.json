    "version": "0.2.0",
    "configurations": [
        {
            "name": "Py: School Billing - Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "run",
                "app.py",
                "--global.developmentMode=false",
                "--server.port",
                "6767",
                "--server.address",
                "localhost",
            ],
            "justMyCode": true
        }
    ]
}